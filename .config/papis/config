add-open = True
add-folder-name = {doc[year]}-{doc[author_list][0][family]}-{doc[title]}
add-file-name = {doc[year]}-{doc[author_list][0][family]}-{doc[title]}
ref-format = {doc[author_list][0][family]}{doc[year]}
extra-bibtex-keys = ["extra", "abstract"]
extra-bibtex-types = ["thesis"]
bibtex-unicode = True

[tui]
editmode = vi
options_list.unselected_margin_style =

[papers]
dir = ~/sync/bibliography/paper
opentool = zathura

[books]
